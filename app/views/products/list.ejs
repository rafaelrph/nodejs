<html>
    <head>
        <title>Products List</title>
    </head>
    <body>
        <table border=1>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < products.length; i++) { %> 
                    <tr>
                        <td><%= products[i].id %></td>
                        <td><%= products[i].title %></td>
                        <td><%= products[i].price %></td>
                        <td><%= products[i].description %></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </body>
</html>